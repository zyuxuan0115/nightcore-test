#!/bin/bash
git clone --recurse-submodules https://github.com/zyuxuan0115/nightcore.git /nightcore-new
cd /nightcore-new 
./build_deps.sh && make -j $(nproc)
sleep 10
/nightcore-new/bin/release/engine \
  --gateway_addr=nightcore-gateway \
  --root_path_for_ipc=/tmp/nightcore/ipc \
  --func_config_file=/nightcore/func_config.json \
  --num_io_workers=2 \
  --gateway_conn_per_worker=4 \
  --disable_monitor \
  --instant_rps_p_norm=0.8
