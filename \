version: "3.8"
services:
  nightcore-engine:
    image: zyuxuan0115/nightcore:test
    entrypoint:
      - /nightcore/engine
      - --gateway_addr=nightcore-gateway
      - --root_path_for_ipc=/tmp/nightcore/ipc
      - --func_config_file=/tmp/nightcore/func_config.json
      - --num_io_workers=1
      - --gateway_conn_per_worker=32
      - --disable_monitor
      - --instant_rps_p_norm=0.8
    depends_on:
      - nightcore-gateway
    volumes:
      - /mnt/inmem/nightcore:/tmp/nightcore
      - /sys/fs/cgroup:/tmp/root_cgroupfs
    environment:
      - FAAS_CGROUP_FS_ROOT=/tmp/root_cgroupfs

  nightcore-gateway:
    image: zyuxuan0115/nightcore:test
    entrypoint:
      - /nightcore/gateway
      - --listen_addr=0.0.0.0
      - --http_port=8080
      - --func_config_file=/tmp/nightcore/func_config.json
      - --num_io_workers=8
      - --max_running_requests=24
      - --lb_pick_least_load
    volumes:
      - /tmp/nightcore_config.json:/tmp/nightcore/func_config.json

  foo:
    image: zyuxuan0115/nightcore:test-foo
    hostname: foo
    restart: always
    entrypoint: ["/tmp/nightcore/run_launcher", "/nightcore/foo.so", "1"]
    volumes:
      - /mnt/inmem/nightcore:/tmp/nightcore
    working_dir: /nightcore
    depends_on:
      - nightcore-engine

  bar:
    image: zyuxuan0115/nightcore:test-bar
    hostname: bar
    restart: always
    entrypoint: ["/tmp/nightcore/run_launcher", "/nightcore/bar.so", "2"]
    volumes:
      - /mnt/inmem/nightcore:/tmp/nightcore
    working_dir: /nightcore
    depends_on:
      - nightcore-engine
